<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the splash screen -->
    <item android:drawable="@android:color/white" /> <!-- Use a different color if desired -->

    <!-- Logo displayed at the center -->
    <item>
        <bitmap
                android:gravity="center"
                android:src="@drawable/logo"
                android:scaleType="centerCrop" /> <!-- "centerCrop" makes the logo larger than "fitCenter" -->
    </item>
</layer-list>
